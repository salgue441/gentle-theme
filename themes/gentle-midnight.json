    "statusBar.debuggingBackground": "#C0A070",
    "statusBar.debuggingForeground": "#08090B",
    "statusBarItem.activeBackground": "#20283A",
    "statusBarItem.hoverBackground": "#15181E",
    "statusBarItem.prominentBackground": "#20283A",
    "statusBarItem.remoteBackground": "#5080C0",
    "statusBarItem.remoteForeground": "#FFFFFF",

    // ============================================
    // TABS
    // ============================================
    "editorGroupHeader.tabsBackground": "#0A0C0E",
    "editorGroupHeader.tabsBorder": "#15181E",
    "tab.activeBackground": "#0D0F12",
    "tab.activeForeground": "#C8CCD4",
    "tab.border": "#15181E",
    "tab.activeBorder": "#00000000",
    "tab.activeBorderTop": "#5080C0",
    "tab.inactiveBackground": "#0A0C0E",
    "tab.inactiveForeground": "#5A6070",
    "tab.hoverBackground": "#0F1115",

    // ============================================
    // LISTS
    // ============================================
    "list.activeSelectionBackground": "#2A4060",
    "list.activeSelectionForeground": "#C8CCD4",
    "list.inactiveSelectionBackground": "#1A2030",
    "list.inactiveSelectionForeground": "#C8CCD4",
    "list.hoverBackground": "#12151A",
    "list.hoverForeground": "#C8CCD4",
    "list.focusBackground": "#2A4060",
    "list.focusForeground": "#C8CCD4",
    "list.highlightForeground": "#80B0E0",
    "list.errorForeground": "#E8835A",
    "list.warningForeground": "#E8A854",

    // ============================================
    // INPUT CONTROLS
    // ============================================
    "input.background": "#12151A",
    "input.foreground": "#C8CCD4",
    "input.border": "#20283A",
    "input.placeholderForeground": "#5A6070",
    "inputOption.activeBackground": "#2A4060",
    "inputOption.activeBorder": "#5A7A9F",
    "inputOption.activeForeground": "#C8CCD4",
    "inputValidation.errorBackground": "#501818",
    "inputValidation.errorBorder": "#E8835A",
    "inputValidation.warningBackground": "#503010",
    "inputValidation.warningBorder": "#E8A854",
    "inputValidation.infoBackground": "#102040",
    "inputValidation.infoBorder": "#5080C0",

    // ============================================
    // BUTTONS
    // ============================================
    "button.background": "#5080C0",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#4070B0",
    "button.secondaryBackground": "#20283A",
    "button.secondaryForeground": "#C8CCD4",
    "button.secondaryHoverBackground": "#2A3550",

    // ============================================
    // DROPDOWN
    // ============================================
    "dropdown.background": "#12151A",
    "dropdown.foreground": "#C8CCD4",
    "dropdown.border": "#20283A",
    "dropdown.listBackground": "#0D0F12",

    // ============================================
    // BADGES
    // ============================================
    "badge.background": "#5080C0",
    "badge.foreground": "#FFFFFF",

    // ============================================
    // PROGRESS BAR
    // ============================================
    "progressBar.background": "#5080C0",

    // ============================================
    // SCROLLBAR
    // ============================================
    "scrollbarSlider.background": "#3A405030",
    "scrollbarSlider.hoverBackground": "#3A405050",
    "scrollbarSlider.activeBackground": "#3A405070",

    // ============================================
    // MINIMAP
    // ============================================
    "minimap.selectionHighlight": "#2A4060",
    "minimap.errorHighlight": "#E8835A80",
    "minimap.warningHighlight": "#E8A85480",
    "minimap.findMatchHighlight": "#B08850",
    "minimapGutter.addedBackground": "#5FB49C",
    "minimapGutter.modifiedBackground": "#6AAFE6",
    "minimapGutter.deletedBackground": "#E8835A",

    // ============================================
    // PEEK VIEW
    // ============================================
    "peekView.border": "#5A7A9F",
    "peekViewEditor.background": "#0F1115",
    "peekViewEditor.matchHighlightBackground": "#8A6B4040",
    "peekViewResult.background": "#0A0C0E",
    "peekViewResult.fileForeground": "#C8CCD4",
    "peekViewResult.lineForeground": "#8890A0",
    "peekViewResult.matchHighlightBackground": "#8A6B4040",
    "peekViewResult.selectionBackground": "#2A4060",
    "peekViewResult.selectionForeground": "#C8CCD4",
    "peekViewTitle.background": "#08090B",
    "peekViewTitleDescription.foreground": "#8890A0",
    "peekViewTitleLabel.foreground": "#C8CCD4",

    // ============================================
    // MERGE CONFLICTS
    // ============================================
    "merge.currentHeaderBackground": "#50A07040",
    "merge.currentContentBackground": "#50A07020",
    "merge.incomingHeaderBackground": "#5080C040",
    "merge.incomingContentBackground": "#5080C020",

    // ============================================
    // PANEL
    // ============================================
    "panel.background": "#0A0C0E",
    "panel.border": "#15181E",
    "panelTitle.activeBorder": "#5080C0",
    "panelTitle.activeForeground": "#C8CCD4",
    "panelTitle.inactiveForeground": "#5A6070",

    // ============================================
    // TERMINAL
    // ============================================
    "terminal.background": "#0A0C0E",
    "terminal.foreground": "#C8CCD4",
    "terminal.ansiBlack": "#15181E",
    "terminal.ansiRed": "#E07070",
    "terminal.ansiGreen": "#70B080",
    "terminal.ansiYellow": "#E0B050",
    "terminal.ansiBlue": "#5090D0",
    "terminal.ansiMagenta": "#B080C0",
    "terminal.ansiCyan": "#60B0B0",
    "terminal.ansiWhite": "#C8CCD4",
    "terminal.ansiBrightBlack": "#3A4050",
    "terminal.ansiBrightRed": "#F09090",
    "terminal.ansiBrightGreen": "#90D0A0",
    "terminal.ansiBrightYellow": "#F0D080",
    "terminal.ansiBrightBlue": "#80B0E0",
    "terminal.ansiBrightMagenta": "#D0A0E0",
    "terminal.ansiBrightCyan": "#80D0D0",
    "terminal.ansiBrightWhite": "#E8ECF0",
    "terminalCursor.foreground": "#C8CCD4",

    // ============================================
    // NOTIFICATIONS
    // ============================================
    "notifications.background": "#0F1115",
    "notifications.foreground": "#C8CCD4",
    "notifications.border": "#15181E",
    "notificationsErrorIcon.foreground": "#E8835A",
    "notificationsWarningIcon.foreground": "#E8A854",
    "notificationsInfoIcon.foreground": "#5080C0",

    // ============================================
    // GIT DECORATIONS
    // ============================================
    "gitDecoration.modifiedResourceForeground": "#6AAFE6",
    "gitDecoration.deletedResourceForeground": "#E8835A",
    "gitDecoration.untrackedResourceForeground": "#5FB49C",
    "gitDecoration.ignoredResourceForeground": "#3A4050",
    "gitDecoration.conflictingResourceForeground": "#E8A854",
    "gitDecoration.addedResourceForeground": "#5FB49C",
    "gitDecoration.stageModifiedResourceForeground": "#6AAFE6",
    "gitDecoration.stageDeletedResourceForeground": "#E8835A",

    // ============================================
    // BREADCRUMBS
    // ============================================
    "breadcrumb.background": "#0D0F12",
    "breadcrumb.foreground": "#5A6070",
    "breadcrumb.focusForeground": "#C8CCD4",
    "breadcrumb.activeSelectionForeground": "#C8CCD4",
    "breadcrumbPicker.background": "#0F1115",

    // ============================================
    // EDITOR WIDGETS
    // ============================================
    "editorWidget.background": "#0F1115",
    "editorWidget.foreground": "#C8CCD4",
    "editorWidget.border": "#15181E",
    "editorSuggestWidget.background": "#0D0F12",
    "editorSuggestWidget.border": "#15181E",
    "editorSuggestWidget.foreground": "#C8CCD4",
    "editorSuggestWidget.highlightForeground": "#80B0E0",
    "editorSuggestWidget.selectedBackground": "#2A4060",
    "editorHoverWidget.background": "#0F1115",
    "editorHoverWidget.border": "#15181E",

    // ============================================
    // DEBUG
    // ============================================
    "debugToolBar.background": "#0F1115",
    "debugIcon.breakpointForeground": "#E8835A",
    "debugIcon.breakpointDisabledForeground": "#3A4050",
    "debugIcon.startForeground": "#5FB49C",
    "debugIcon.pauseForeground": "#E8A854",
    "debugIcon.stopForeground": "#E8835A",
    "debugIcon.restartForeground": "#5FB49C",
    "debugConsole.infoForeground": "#6AAFE6",
    "debugConsole.warningForeground": "#E8A854",
    "debugConsole.errorForeground": "#E8835A",

    // ============================================
    // TESTING
    // ============================================
    "testing.iconFailed": "#E8835A",
    "testing.iconErrored": "#E8835A",
    "testing.iconPassed": "#5FB49C",
    "testing.iconQueued": "#E8A854",
    "testing.iconUnset": "#3A4050",
    "testing.iconSkipped": "#3A4050"
  },
  "tokenColors": [
    // ============================================
    // COMMENTS
    // Subtle but readable
    // ============================================
    {
      "name": "Comments",
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "foreground": "#6B7A87",
        "fontStyle": "italic"
      }
    },

    // ============================================
    // STRINGS
    // Teal-green (colorblind-safe)
    // ============================================
    {
      "name": "Strings",
      "scope": [
        "string",
        "string.quoted",
        "string.template"
      ],
      "settings": {
        "foreground": "#5FB49C"
      }
    },
    {
      "name": "String escape characters",
      "scope": [
        "constant.character.escape",
        "string.regexp"
      ],
      "settings": {
        "foreground": "#5FB49C"
      }
    },

    // ============================================
    // NUMBERS & CONSTANTS
    // Amber (colorblind-safe)
    // ============================================
    {
      "name": "Numbers",
      "scope": [
        "constant.numeric",
        "constant.numeric.integer",
        "constant.numeric.float",
        "constant.numeric.hex"
      ],
      "settings": {
        "foreground": "#E8A854"
      }
    },
    {
      "name": "Constants",
      "scope": [
        "constant.language",
        "constant.language.boolean",
        "constant.language.null",
        "constant.language.undefined"
      ],
      "settings": {
        "foreground": "#E8A854"
      }
    },

    // ============================================
    // KEYWORDS & CONTROL FLOW
    // Purple (colorblind-safe)
    // ============================================
    {
      "name": "Keywords",
      "scope": [
        "keyword",
        "keyword.control",
        "keyword.operator.new",
        "keyword.operator.expression",
        "keyword.operator.logical",
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#B794D4"
      }
    },
    {
      "name": "Control flow",
      "scope": [
        "keyword.control.conditional",
        "keyword.control.loop",
        "keyword.control.flow",
        "keyword.control.return",
        "keyword.control.trycatch"
      ],
      "settings": {
        "foreground": "#B794D4"
      }
    },

    // ============================================
    // OPERATORS
    // ============================================
    {
      "name": "Operators",
      "scope": [
        "keyword.operator",
        "keyword.operator.arithmetic",
        "keyword.operator.assignment",
        "keyword.operator.comparison"
      ],
      "settings": {
        "foreground": "#8890A0"
      }
    },

    // ============================================
    // FUNCTIONS
    // Blue (colorblind-safe)
    // ============================================
    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "meta.function-call",
        "support.function"
      ],
      "settings": {
        "foreground": "#6AAFE6"
      }
    },
    {
      "name": "Function parameters",
      "scope": [
        "variable.parameter",
        "meta.parameter"
      ],
      "settings": {
        "foreground": "#8890A0"
      }
    },

    // ============================================
    // CLASSES & TYPES
    // Teal (colorblind-safe)
    // ============================================
    {
      "name": "Classes and Types",
      "scope": [
        "entity.name.type",
        "entity.name.class",
        "support.class",
        "support.type",
        "entity.name.type.class"
      ],
      "settings": {
        "foreground": "#56C4C8"
      }
    },
    {
      "name": "Interfaces",
      "scope": [
        "entity.name.type.interface",
        "entity.name.type.alias"
      ],
      "settings": {
        "foreground": "#56C4C8"
      }
    },
    {
      "name": "Type parameters (generics)",
      "scope": [
        "entity.name.type.parameter"
      ],
      "settings": {
        "foreground": "#56C4C8"
      }
    },

    // ============================================
    // VARIABLES
    // ============================================
    {
      "name": "Variables",
      "scope": [
        "variable",
        "variable.other",
        "variable.other.readwrite"
      ],
      "settings": {
        "foreground": "#C8CCD4"
      }
    },
    {
      "name": "Object properties",
      "scope": [
        "variable.other.property",
        "variable.other.object.property",
        "meta.object-literal.key"
      ],
      "settings": {
        "foreground": "#A8ACB4"
      }
    },
    {
      "name": "Constant variables",
      "scope": [
        "variable.other.constant"
      ],
      "settings": {
        "foreground": "#E8A854"
      }
    },

    // ============================================
    // HTML/JSX TAGS
    // ============================================
    {
      "name": "HTML Tags",
      "scope": [
        "entity.name.tag",
        "punctuation.definition.tag"
      ],
      "settings": {
        "foreground": "#E8835A"
      }
    },
    {
      "name": "HTML Attributes",
      "scope": [
        "entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#E8A854"
      }
    },
    {
      "name": "JSX Component Tags",
      "scope": [
        "support.class.component"
      ],
      "settings": {
        "foreground": "#56C4C8"
      }
    },

    // ============================================
    // CSS
    // ============================================
    {
      "name": "CSS Selectors",
      "scope": [
        "entity.other.attribute-name.class.css",
        "entity.other.attribute-name.id.css"
      ],
      "settings": {
        "foreground": "#E8A854"
      }
    },
    {
      "name": "CSS Properties",
      "scope": [
        "support.type.property-name.css"
      ],
      "settings": {
        "foreground": "#6AAFE6"
      }
    },
    {
      "name": "CSS Values",
      "scope": [
        "support.constant.property-value.css",
        "meta.property-value.css"
      ],
      "settings": {
        "foreground": "#5FB49C"
      }
    },
    {
      "name": "CSS Units",
      "scope": [
        "keyword.other.unit.css"
      ],
      "settings": {
        "foreground": "#E8A854"
      }
    },

    // ============================================
    // JSON
    // ============================================
    {
      "name": "JSON Keys",
      "scope": [
        "support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#6AAFE6"
      }
    },
    {
      "name": "JSON Values",
      "scope": [
        "string.quoted.double.json"
      ],
      "settings": {
        "foreground": "#5FB49C"
      }
    },

    // ============================================
    // MARKDOWN
    // ============================================
    {
      "name": "Markdown Headings",
      "scope": [
        "heading.1.markdown",
        "heading.2.markdown",
        "heading.3.markdown",
        "heading.4.markdown",
        "heading.5.markdown",
        "heading.6.markdown",
        "markup.heading"
      ],
      "settings": {
        "foreground": "#6AAFE6",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markdown Bold",
      "scope": [
        "markup.bold"
      ],
      "settings": {
        "foreground": "#C8CCD4",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markdown Italic",
      "scope": [
        "markup.italic"
      ],
      "settings": {
        "foreground": "#C8CCD4",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Markdown Links",
      "scope": [
        "markup.underline.link"
      ],
      "settings": {
        "foreground": "#56C4C8"
      }
    },
    {
      "name": "Markdown Code",
      "scope": [
        "markup.inline.raw",
        "markup.fenced_code.block"
      ],
      "settings": {
        "foreground": "#E8A854"
      }
    },
    {
      "name": "Markdown Quote",
      "scope": [
        "markup.quote"
      ],
      "settings": {
        "foreground": "#6B7A87",
        "fontStyle": "italic"
      }
    },

    // ============================================
    // PUNCTUATION
    // ============================================
    {
      "name": "Punctuation",
      "scope": [
        "punctuation",
        "punctuation.definition",
        "punctuation.separator",
        "punctuation.terminator"
      ],
      "settings": {
        "foreground": "#606878"
      }
    },

    // ============================================
    // SUPPORT & LIBRARY
    // ============================================
    {
      "name": "Library/Framework",
      "scope": [
        "support.variable",
        "support.constant"
      ],
      "settings": {
        "foreground": "#56C4C8"
      }
    },

    // ============================================
    // IMPORTS/MODULES
    // ============================================
    {
      "name": "Import/Export",
      "scope": [
        "keyword.control.import",
        "keyword.control.export",
        "keyword.control.from",
        "keyword.control.as"
      ],
      "settings": {
        "foreground": "#B794D4"
      }
    },
    {
      "name": "Module names",
      "scope": [
        "entity.name.import",
        "entity.name.package"
      ],
      "settings": {
        "foreground": "#5FB49C"
      }
    },

    // ============================================
    // DECORATORS/ANNOTATIONS
    // ============================================
    {
      "name": "Decorators",
      "scope": [
        "meta.decorator",
        "punctuation.decorator"
      ],
      "settings": {
        "foreground": "#E8A854"
      }
    },

    // ============================================
    // INVALID/DEPRECATED
    // ============================================
    {
      "name": "Invalid",
      "scope": [
        "invalid",
        "invalid.illegal"
      ],
      "settings": {
        "foreground": "#E8835A",
        "fontStyle": "underline"
      }
    },
    {
      "name": "Deprecated",
      "scope": [
        "invalid.deprecated"
      ],
      "settings": {
        "foreground": "#E8A854",
        "fontStyle": "strikethrough"
      }
    }
  ],
  "semanticTokenColors": {
    "variable": "#C8CCD4",
    "variable.readonly": "#E8A854",
    "variable.defaultLibrary": "#56C4C8",
    "property": "#A8ACB4",
    "property.readonly": "#E8A854",
    "function": "#6AAFE6",
    "function.defaultLibrary": "#6AAFE6",
    "method": "#6AAFE6",
    "class": "#56C4C8",
    "class.defaultLibrary": "#56C4C8",
    "interface": "#56C4C8",
    "type": "#56C4C8",
    "type.defaultLibrary": "#56C4C8",
    "typeParameter": "#56C4C8",
    "namespace": "#56C4C8",
    "enum": "#56C4C8",
    "enumMember": "#E8A854",
    "parameter": "#8890A0",
    "keyword": "#B794D4",
    "modifier": "#B794D4",
    "comment": "#6B7A87",
    "string": "#5FB49C",
    "number": "#E8A854",
    "regexp": "#5FB49C",
    "operator": "#8890A0"
  }
}
