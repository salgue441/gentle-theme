    "editorGutter.modifiedBackground": "#6AAFE6",
    "editorGutter.addedBackground": "#5FB49C",
    "editorGutter.deletedBackground": "#E8835A",

    // ============================================
    // DIFF EDITOR
    // ============================================
    "diffEditor.insertedTextBackground": "#50A07020",
    "diffEditor.removedTextBackground": "#C0707020",
    "diffEditor.insertedLineBackground": "#50A07010",
    "diffEditor.removedLineBackground": "#C0707010",

    // ============================================
    // SIDEBAR & ACTIVITY BAR
    // ============================================
    "sideBar.background": "#0A0C0E",
    "sideBar.foreground": "#8890A0",
    "sideBar.border": "#15181E",
    "sideBarTitle.foreground": "#C8CCD4",
    "sideBarSectionHeader.background": "#0F1115",
    "sideBarSectionHeader.foreground": "#C8CCD4",

    "activityBar.background": "#08090B",
    "activityBar.foreground": "#C8CCD4",
    "activityBar.inactiveForeground": "#3A4050",
    "activityBar.border": "#15181E",
    "activityBarBadge.background": "#5080C0",
    "activityBarBadge.foreground": "#FFFFFF",

    // ============================================
    // TITLE BAR
    // ============================================
    "titleBar.activeBackground": "#08090B",
    "titleBar.activeForeground": "#C8CCD4",
    "titleBar.inactiveBackground": "#08090B",
    "titleBar.inactiveForeground": "#3A4050",
    "titleBar.border": "#15181E",

    // ============================================
    // STATUS BAR
    // ============================================
    "statusBar.background": "#08090B",
    "statusBar.foreground": "#8890A0",
    "statusBar.border": "#15181E",
