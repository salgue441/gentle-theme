{
  "name": "Gentle Midnight",
  "type": "dark",
  "semanticHighlighting": true,
  "colors": {
    // ============================================
    // BASE COLORS
    // Very dark backgrounds - near black but not pure
    // Ideal for OLED screens and dark environments
    // ============================================
    "foreground": "#C8CCD4",
    "focusBorder": "#5A7A9F",
    "selection.background": "#2A4060",
    "scrollbar.shadow": "#00000050",
    "widget.shadow": "#00000060",
    "icon.foreground": "#8890A0",
    "errorForeground": "#E8835A",

    // ============================================
    // EDITOR
    // Near-black background for maximum darkness
    // ============================================
    "editor.background": "#0D0F12",
    "editor.foreground": "#C8CCD4",
    "editorLineNumber.foreground": "#3A4050",
    "editorLineNumber.activeForeground": "#8890A0",
    "editorCursor.foreground": "#C8CCD4",
    "editor.selectionBackground": "#2A406050",
    "editor.selectionHighlightBackground": "#2A406030",
    "editor.inactiveSelectionBackground": "#2A406040",
    "editor.wordHighlightBackground": "#20283020",
    "editor.wordHighlightStrongBackground": "#2A406040",
    "editor.findMatchBackground": "#8A6B4050",
    "editor.findMatchHighlightBackground": "#8A6B4030",
    "editor.findMatchBorder": "#B08850",
    "editor.hoverHighlightBackground": "#15181E20",
    "editor.lineHighlightBackground": "#12151A",
    "editor.lineHighlightBorder": "#00000000",
    "editor.rangeHighlightBackground": "#12151A20",
    "editorWhitespace.foreground": "#252A35",
    "editorIndentGuide.background": "#1A1E25",
    "editorIndentGuide.activeBackground": "#2A3040",
    "editorRuler.foreground": "#1A1E25",
    "editorBracketMatch.background": "#2A406040",
    "editorBracketMatch.border": "#5A7A9F",

    // Bracket pair colorization - colorblind-safe (blue, amber, purple, teal)
    "editorBracketHighlight.foreground1": "#6AAFE6",
    "editorBracketHighlight.foreground2": "#E8A854",
    "editorBracketHighlight.foreground3": "#B794D4",
    "editorBracketHighlight.foreground4": "#56C4C8",
    "editorBracketHighlight.foreground5": "#6AAFE6",
    "editorBracketHighlight.foreground6": "#E8A854",

    // ============================================
    // EDITOR GUTTER
    // ============================================
